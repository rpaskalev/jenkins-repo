

pipeline {
  agent {
    label any
  }

parameters {
    string(name: 'DEPLOY_ENV', description: 'Env to deploy to', defaultValue: '')
}


  stages {
    stage('Deploy UI'){
      when { branch 'main' }
      steps {
        sh '''
          sed -i 's/ENVIRONMENT/$DEPLY_ENV/g' assets/index.html
          aws s3 cp assets/index.html s3://jenkins-bucket-ziyotek-<caller_id>/index.html
        '''
      }
    }
    stage('Deploy AI'){
      when { branch 'qa' }
      steps {
        sh '''
          sed -i 's/ENVIRONMENT/$DEPLY_ENV/g' assets/index.html
          aws s3 cp assets/index.html s3://jenkins-bucket-ziyotek-<caller_id>/index.html
        '''
      }
    }
  }
  }
